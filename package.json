{
  "name": "journalize",
  "version": "2.6.0",
  "description": "A collection of functions useful for making prose more reader friendly. Inspired by Django's `django.contrib.humanize`.",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "src",
    "types"
  ],
  "scripts": {
    "docs:build": "documentation readme ./lib/index.js --readme-file README.md --section 'API Docs' --sort-order alpha && prettier --write README.md",
    "docs:serve": "documentation serve --watch ./src/index.js",
    "prepublishOnly": "npm run test",
    "test": "uvu",
    "test:cov": "c8 --reporter text --reporter lcovonly npm run test",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdmurphy/journalize.git"
  },
  "keywords": [
    "normalization",
    "journalism",
    "humanity",
    "editing",
    "prose"
  ],
  "author": "Ryan Murphy <ryan@rdmurphy.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rdmurphy/journalize/issues"
  },
  "homepage": "https://github.com/rdmurphy/journalize#readme",
  "devDependencies": {
    "@rdm/prettier-config": "^3.0.0",
    "@sinonjs/fake-timers": "^10.0.2",
    "c8": "^7.12.0",
    "coveralls": "^3.1.1",
    "documentation": "^14.0.1",
    "lefthook": "^1.2.6",
    "prettier": "^2.8.1",
    "uvu": "^0.5.6"
  },
  "prettier": "@rdm/prettier-config"
}
